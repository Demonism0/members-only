extends layout

block content
  h1= title 
  form(method='POST')
    div.form-group
      label(for='first') First Name: 
      input#first.form-control(type='text' name='first' required value=(undefined===fields ? '' : fields.first) )
    div.form-group
      label(for='last') Last Name: 
      input#last.form-control(type='text' name='last' required value=(undefined===fields ? '' : fields.last) )
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text' name='username' required value=(undefined===fields ? '' : fields.username) )
    div.form-group
      label(for='password') Password: 
      input#password.form-control(type='password' name='password' required )
    div.form-group
      label(for='cfmPassword') Confirm Password: 
      input#cfmPassword.form-control(type='password' name='cfmPassword' required )
    button(type='submit') Submit

  if errors
    ul 
      for error in errors 
        li!= error.msg 