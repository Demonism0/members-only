extends layout

block content
  h1= title 
  form(method='POST')
    div.form-group
      label(for='messageTitle') Title: 
      input#messageTitle.form-control(type='text' name='messageTitle' required value=(undefined===fields ? '' : fields.title) )
    div.form-group
      label(for='messageBody') Body: 
      textarea#messageBody.form-control(type='text' name='messageBody' required)= undefined===fields ? '' : fields.body
    button(type='submit') Submit

  if errors
    ul 
      for error in errors 
        li!= error.msg 